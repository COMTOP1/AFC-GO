{{define "title"}}Teams{{end}}
{{define "content"}}
    {{$priv := and (ne $.User.ID 0) (ne $.User.Role "Manager")}}
    <main class="main" style="text-align: center">
        <div class="pageHeaderBanner">
            <h2 class="pageHeader">
                Teams</h2>
            <p>Select any of the following to see more details</p>
            {{if $priv}}
                <div style="margin: 15px 0 15px 0">
                    <a class="button is-info" onclick="addTeamModal()">Add Team</a>
                </div>
            {{end}}
        </div>
        <div class="flexContainer">
            {{range .Teams}}
                <div class="listItem" style="text-align: center; width: auto; height: auto;"
                     style="display: block; cursor: pointer;" onclick="location.href='/team/{{.ID}}';">
                    <p class="subtitle">
                        {{.Name}}</p>
                    {{if $priv}}
                        <p class="subtitle is-6">{{if .IsActive}}Active{{else}}Inactive{{end}}</p>
                    {{end}}
                </div>
            {{end}}
        </div>
    </main>
    {{if $priv}}
        {{template "modal" .}}
    {{end}}
{{end}}

{{define "modal"}}
    <div id="addTeamModal" class="modal">
        <div class="modal-background"></div>
        <div class="modal-content">
            <div class="box">
                <article class="media">
                    <div class="media-content">
                        <div class="content">
                            <p class="title">Add Team</p>
                            <p>Enter the team details below.</p>
                            <form id="addTeamForm" enctype="multipart/form-data">
                                <div class="field">
                                    <label class="label" for="name">Name</label>
                                    <div class="control">
                                        <input
                                                id="name"
                                                class="input"
                                                type="text"
                                                name="name"
                                                placeholder="Name"
                                        />
                                    </div>
                                </div>
                                <div class="field">
                                    <label class="label" for="website">Website (leave blank if there isn't one)</label>
                                    <div class="control">
                                        <input
                                                id="website"
                                                class="input"
                                                type="text"
                                                name="website"
                                                placeholder="https://..."
                                        />
                                    </div>
                                </div>
                                <div class="field">
                                    <label class="label" for="image">Image</label>
                                    <div class="file is-info has-name">
                                        <label class="file-label">
                                            <input class="file-input" type="file" accept="image/*" name="image"
                                                   id="addTeamImage">
                                            <span class="file-cta">
                                            <span class="file-icon">
                                                <i class="fa fa-upload"></i>
                                            </span>
                                            <span class="file-label">Choose a fileâ€¦</span>
                                        </span>
                                            <span class="file-name" id="addTeamImageName">...</span>
                                        </label>
                                    </div>
                                </div>
                                <button class="button is-info" onclick="addTeam()" id="addTeamButton">
                                    Add Team
                                </button>
                            </form>
                        </div>
                    </div>
                </article>
            </div>
        </div>
        <button class="modal-close is-large" aria-label="close"></button>
    </div>
    <div id="deleteTeamModal" class="modal">
        <div class="modal-background"></div>
        <div class="modal-content">
            <div class="box">
                <article class="media">
                    <div class="media-content">
                        <div class="content">
                            <p class="title" id="deleteTeamModalTitle"></p>
                            <p>Be careful! Are you sure you want to remove this?</p>
                            <form method="post" id="deleteTeamModalForm">
                                <a class="button is-danger" onclick="deleteTeam()">Delete Team</a>
                            </form>
                        </div>
                    </div>
                </article>
            </div>
        </div>
        <button class="modal-close is-large" aria-label="close"></button>
    </div>
    <script>
        let addTeamImage = $('#addTeamImage')
        addTeamImage.change(function () {
            console.log("call")
            console.log(addTeamImage[0].files[0].name)
            addTeamImage.text(addTeamImage[0].files[0].name);
        });

        document.querySelectorAll(
            ".modal-background, .modal-close,.modal-card-head .delete, .modal-card-foot .button"
        ).forEach(($el) => {
            const $modal = $el.closest(".modal");
            $el.addEventListener("click", () => {
                $modal.classList.remove("is-active");
            });
        });

        let teamID = 0;

        function deleteTeamModal(id, name) {
            teamID = id
            document.getElementById("deleteTeamModal").classList.add("is-active");
            document.getElementById("deleteTeamModalTitle").innerHTML = 'Are you sure you want to delete "' + name + '" from Teams?';
        }

        function deleteTeam() {
            document.getElementById("deleteTeamModalForm").action = "/team/" + teamID + "/delete";
            $('#deleteTeamModalForm').submit();
        }

        function addTeamModal() {
            document.getElementById("addTeamModal").classList.add("is-active");
        }

        function addTeam() {
            document.getElementById("addTeamButton").disabled = true;
            $.ajax({
                url: '/team/add',
                type: 'post',
                dataType: 'json',
                contentType: 'multipart/form-data',
                data: $('#addTeamForm').serialize(),
                success: function (data) {
                    if (data.error.length > 0) {
                        $("#error").html(data.error);
                    } else {
                        window.location.href = "https://afcaldermaston.co.uk";
                    }
                },
            })
        }
    </script>
{{end}}